{
    "manifest_version": 3,
    "name": "Captura de URLs",
    "version": "1.0",
    "description": "Uma extensão para capturar todas as URLs das abas abertas e copiá-las automaticamente para a área de transferência.",
    "permissions": ["tabs", "clipboardWrite", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  